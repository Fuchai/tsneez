#topCover
  background $theme-color
  box-shadow: 0px -10px 20px 2px rgba(120,120,120,0.2) inset
  min-height initial
  #appTitle
    color #333
    font-size 7.3em
    margin 0px
    padding 0px
    font-weight 300
    text-align center
    strong
      color white
      font-weight 300
  #appSubtitle
    color #444
    font-size 1.5em
    margin 0px
